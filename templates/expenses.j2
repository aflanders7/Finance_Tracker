<head>
    <title>Expenses</title>
    <link rel="stylesheet" type="text/css" href="/static/css/style.css">
</head>

<div class="sidenav">
  <a href="graph">Spending Analysis</a>
  <a href="expenses">Expenses Tracker</a>
<a href="faq">FAQ</a>
</div>


<div class="content">
    <h1>Expenses Tracker</h1>

    {% for item in total %}
        <h2>Total Expenses: ${{ item[0] }}</h2>
    {% endfor %}

    <div class="sort">
    <div class = "search">
    <form id="search" method='post' action='/expenses-search'>
            <label for="searchName">Search by Name: </label>
            <input type="text" name="searchName" id="searchName">
            <input type="submit">
            <a href='/expenses'><button>Reset</button></a>
    </form>
    </div>

        <p>Sort By:</p>
        <form id="expense-cost" action="/expenses-cost" method="get">
            <input type="submit" value="Cost" name="cost" class="btn btn-primary" style="margin:.5rem;">
        </form>
        <form id="expense-category" action="/expenses-category" method="get">
            <input type="submit" value="Category" name="category" class="btn btn-primary" style="margin:.5rem;">
        </form>
        <form id="expense" action="/expenses" method="get">
            <input type="submit" value="Date" name="date" class="btn btn-primary" style="margin:.5rem;">
        </form>

    </div>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Cost</th>
            <th>Category</th>
            <th>Description</th>
            <th>Date</th>
            <th> </th>
        </tr>
        <tbody>
        {% for item in Expenses %}
        <tr>
            <td>{{ item[1] }}</td>
            <td>${{ item[2] }}</td>
            <td>{{ item[3] }}</td>
            <td>{{ item[4] }}</td>
            <td>{{ item[5] }}</td>
            <td><a href="delete_expense/{{item[0]}}" class="btn btn-default">Delete</a></td>
        </tr>
        {% endfor %}
    </table>
</div>
    <div id="insert" class="content2">
        <h2>&nbsp; Add An Expense</h2>

            <form id="Add_Expense" action="/expenses" method="post">
                <fieldset>
                    <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name"  placeholder="" required>
                    <p>&nbsp;</p>
                    <label for="amount">Amount Spent:</label>
                    <input type="number" class="form-control" id="amount" name="amount" max="2000" placeholder="" required>
                    <p>&nbsp;</p>
                    <label for="category">Category:</label>
                    <select class="form-control" id="category" name="category" placeholder="" required>
                        <option value="Food">Food</option>
                        <option value="Living">Living</option>
                        <option value="Transportation">Transportation</option>
                        <option value="Health">Health</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Other">Other</option>
                    </select>
                    <p>&nbsp;</p>
                    <label for="description">Description:</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="optional">
                    <p>&nbsp;</p>
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" value="2023-11-01" />
                </fieldset>

                <!-- Create 'Add Person' and 'Cancel' buttons -->
                <input type="submit" value="Add Expense" name="Add_Expense" class="btn btn-primary btn-block" style="margin:.5rem;">

            </form>
    </div><!--insert-->


