<head>
    <title>Expenses</title>
    <link rel="stylesheet" type="text/css" href="/static/css/style.css">
</head>

<div class="sidenav">
        <br>
        <a href="graph">Financial Analysis</a>
        <a href="expenses">Expenses</a>
        <a href="income">Income</a>
</div>


<div class="main">
    <h1>Expenses Tracker</h1>

    {% for item in total %}
        <h2>Total Expenses: ${{ item[0] }}</h2>
    {% endfor %}

    <div class="container-mid">

    <div class="header-container">
    <div class = "search">
    <form id="search" method='post' action='/expenses-search'>
            <label for="searchName">Search by Title: </label>
            <input type="text" name="searchName" id="searchName">
            <input type="submit">
            <a href='/expenses'><button>Reset</button></a>
    </form>
    </div>

    <div class="sort">
        <p>Sort By:</p>
        <form id="expense-cost" action="/expenses-sort" method="get">
            <input type="submit" value="Cost" name="sort" id=class="btn btn-primary" style="margin:.5rem;">
        </form>
        <form id="expense-category" action="/expenses-sort" method="get">
            <input type="submit" value="Category" name="sort" class="btn btn-primary" style="margin:.5rem;">
        </form>
        <form id="expense" action="/expenses" method="get">
            <input type="submit" value="Date" name="sort" class="btn btn-primary" style="margin:.5rem;">
        </form>
    </div>
    </div>
        

    <div class="container-table">
    <table>
    <div class="table-header">
        <thead>
        <tr>
            <th>Title</th>
            <th>Cost</th>
            <th>Category</th>
            <th>Description</th>
            <th>Date</th>
            <th> </th>
        </tr>
        </thead>
    </div>

    <div class="table-body">
        <tbody>
        {% for item in Expenses %}
        <tr>
            <td>{{ item[1] }}</td>
            <td>${{ item[2] }}</td>
            <td>{{ item[3] }}</td>
            <td>{{ item[4] }}</td>
            <td>{{ item[5] }}</td>
            <td><a href="delete_expense/{{item[0]}}" class="btn btn-default">Delete</a></td>
        </tr>
        {% endfor %}
    </div>
    </table>
    </div>
    </div>

    <div class="container-form">
            <p> &nbsp; Add an Expense: </p>
            <form id="Add_Expense" action="/expenses" method="post">
                <fieldset>
                    <label for="name" class="required" >Title:</label>
                    <input type="text" class="form-control" id="name" name="name"  placeholder="" required>
                    <p>&nbsp;</p>
                    <label for="amount" class="required">Amount Spent:</label>
                    <input type="number" class="form-control" id="amount" name="amount" max="2000" placeholder="" required>
                    <p>&nbsp;</p>
                    <label for="category" class="required">Category:</label>
                    <select class="form-control" id="category" name="category" placeholder="" required>
                        <option value="Food">Food</option>
                        <option value="Living">Living</option>
                        <option value="Transportation">Transportation</option>
                        <option value="Health">Health</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Savings">Savings</option>
                        <option value="Other">Other</option>
                    </select>
                    <p>&nbsp;</p>
                    <label for="description">   Description:</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="optional">
                    <p>&nbsp;</p>
                    <label for="date" class="required">Date:</label>
                    <input type="date" id="date" name="date" />
                </fieldset>

                <input type="submit" value="Add Expense" name="Add_Expense" class="btn btn-primary btn-block" style="margin:.5rem;">

            </form>
    </div>

</div>


